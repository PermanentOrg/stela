{
	"extends": [
		"@tsconfig/node22/tsconfig.json",
		"@tsconfig/strictest/tsconfig.json"
	],
	"exclude": [
		"**/*.test.ts",
		"**/*_test.ts",
		"node_modules",
		"packages/*/dist"
	],
	"compilerOptions": {
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"lib": [
			"es2022",
			"DOM"
		],
		"paths": {
			"@stela/*": [
				"./packages/*/"
			]
		}
	}
}
